pipeline {
    agent any


    stages {
        
        stage('Clone App') {
            steps {
                // Get some code from a GitHub repository
                sh 'rm -rf spring-web-youtube && git clone https://github.com/torneseumprogramador/spring-web-youtube.git'
            }
        }

        stage('Build App') {
            steps {
                sh 'cd spring-web-youtube && ./mvnw package'
                echo 'Building..'
            }
        }

        stage('Test App') {
            steps {
                sh 'cd spring-web-youtube && ./mvnw test'
                echo 'Testing....'
                //sh 'nohup ./start.sh &'
                //echo ' Starting....'
            }
        }

        stage('Create and Push Docker image') {
            steps {
                sh "cd spring-web-youtube && docker build -t ericovh/projetofinal-spr-web -f Dockerfile . && docker push ericovh/projetofinal-spr-web"
                echo 'pushing docker image..'
            }
        }

